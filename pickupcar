public class pickupcar extends car {

	public String getname(){
		return carname;
	}
	public double getrent(){
		return rent;
	}
	public pickupcar(String name,double rent,int truckcap,int passengercap){
		this.carname=name;
		this.rent=rent;
		this.truckcap=truckcap;
		this.passengercap=passengercap;
		
	}
	public void show(){
	       System.out.println(this.carname+'\t'+this.rent+'\t'+"载人:"+this.passengercap+'\t'+"载货"+this.truckcap+'\t');
	}
}
